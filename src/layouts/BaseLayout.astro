---
import '../styles/tailwind.css';
import '../styles/tokens.css';
const { title = 'Aion Health Care & Support Services Ltd', description = 'Compassionate, high‑quality home care and supported living across Chelmsford and the East of England.' } = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#040368" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Aion Health Care & Support Services Ltd" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/aion_logo_blue.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/aion_logo_blue.png" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@500;600&display=swap" rel="stylesheet">
    <link rel="icon" href="/aion_icon.png" type="image/png" />
    <link rel="apple-touch-icon" href="/aion_icon.png" />
  </head>
  <body class="min-h-dvh font-body text-slate-900 antialiased">
    <header class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b border-slate-200">
      <div class="mx-auto max-w-7xl px-6 h-16 flex items-center justify-between">
        <a href="/" class="flex items-center gap-3">
          <img src="/aion_logo_blue.png" alt="Aion Health Care & Support Services Ltd" class="h-16 w-auto" loading="eager" decoding="async" />
        </a>
        <nav class="hidden md:flex items-center gap-6">
          <a href="/services" class="hover:text-navy">Services</a>
          <a href="/about" class="hover:text-navy">About</a>
          <a href="/areas" class="hover:text-navy">Areas</a>
          <a href="/faq" class="hover:text-navy">FAQs</a>
          <a href="/careers" class="hover:text-navy">Careers</a>
        </nav>
        <a href="tel:01245823377" class="inline-flex items-center rounded-md bg-coral px-4 py-2 text-navy font-medium">Call 01245823377</a>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="mt-24 bg-navy text-white">
      <div class="mx-auto max-w-7xl px-6 py-16 grid gap-8 md:grid-cols-3">
        <div>
          <div class="flex items-center gap-3">
            <img src="/aion_logo_blue.png" alt="Aion Health Care & Support Services Ltd" class="h-8 w-auto" loading="lazy" decoding="async" />
          </div>
          <p class="mt-4 text-white/70">Compassionate, person‑centred care delivered in the comfort of your home.</p>
        </div>
        <div>
          <h3 class="font-heading">Contact</h3>
          <ul class="mt-3 space-y-1 text-white/80">
            <li>Terriers Retreat, Woods Road, Ford End</li>
            <li>Chelmsford, Essex CM3 1LJ, United Kingdom</li>
            <li>Tel: <a class="underline" href="tel:01245823377">01245823377</a></li>
            <li>Email: <a class="underline" href="mailto:info@aionhcss.com">info@aionhcss.com</a></li>
          </ul>
        </div>
        <div>
          <h3 class="font-heading">Quick links</h3>
          <ul class="mt-3 space-y-1 text-white/80">
            <li><a class="underline" href="/services">Our Services</a></li>
            <li><a class="underline" href="/refer">Refer a Client</a></li>
            <li><a class="underline" href="/contact">Contact</a></li>
            <li><a class="underline" href="/privacy">Privacy</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-white/10 py-6 text-center text-white/60 text-sm">© {new Date().getFullYear()} Aion Health Care & Support Services Ltd</div>
    </footer>
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'LocalBusiness',
        name: 'Aion Health Care & Support Services Ltd',
        telephone: '+44 1245 823377',
        email: 'info@aionhcss.com',
        address: {
          '@type': 'PostalAddress',
          streetAddress: 'Terriers Retreat, Woods Road, Ford End',
          addressLocality: 'Chelmsford',
          addressRegion: 'Essex',
          postalCode: 'CM3 1LJ',
          addressCountry: 'GB'
        }
      })}
    </script>
  </body>
  
</html>
